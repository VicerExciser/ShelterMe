<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff00bbbb"
    tools:context="edu.gatech.cs2340.shelterme.controllers.PasswordRecovery">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="354dp"
        android:layout_height="104dp"
        android:text="Please answer security questions below to recovery your password."
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="16dp"
        tools:text="Please answer security questions below to recovery your password." />

    <Spinner
        android:id="@+id/spinnerQuestions"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:entries="@string/security_question"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="225dp" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Answer"
        android:inputType="textPersonName"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="274dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        tools:layout_editor_absoluteX="279dp"
        tools:layout_editor_absoluteY="502dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="196dp"
        android:layout_height="65dp"
        android:text="Select a question "
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="184dp" />
</android.support.constraint.ConstraintLayout>
