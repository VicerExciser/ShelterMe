<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.cs2340.shelterme.controllers.MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/login"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView2"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignTop="@+id/signup"
            android:tint="#000000"
            app:srcCompat="@android:drawable/bottom_bar" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/proceed1"
            android:layout_alignEnd="@+id/shelter"
            android:layout_alignRight="@+id/shelter"
            android:layout_marginBottom="91dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            tools:fontFamily="sans-serif" />

        <ImageButton
            android:id="@+id/signup"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignEnd="@+id/textView3"
            android:layout_alignRight="@+id/textView3"
            android:tint="#000000"
            app:srcCompat="@android:drawable/bottom_bar" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Enjoy your stay!"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/shelter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="66dp"
            android:text="ShelterMe"
            android:textColor="#FFFFFF"
            android:textSize="70sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/proceed"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/proceed1"
            android:layout_alignLeft="@+id/proceed1"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/proceed1"
            android:layout_alignStart="@+id/proceed1"
            android:layout_marginBottom="20dp"
            android:tint="@android:color/background_dark"
            app:srcCompat="@android:drawable/bottom_bar" />

        <TextView
            android:id="@+id/proceed1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/proceed"
            android:layout_centerHorizontal="true"
            android:text="Click here to proceed without logging in"
            android:textColor="?attr/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginEnd="46dp"
            android:layout_marginRight="46dp"
            android:layout_toLeftOf="@+id/login"
            android:layout_toStartOf="@+id/login"
            android:text="Sign up"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
