<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.gatech.cs2340.shelterme.controllers.EmployeeHomePage"
    tools:showIn="@layout/activity_employee_home_page">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#CEF6EC"
            android:text="Log Out" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:fontFamily="cursive"
            android:text="ShelterMe"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/editShelter"
            android:layout_width="wrap_content"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:layout_above="@+id/sendRequest"
            android:layout_alignEnd="@+id/sendRequest"
            android:layout_alignLeft="@+id/sendRequest"
            android:layout_alignRight="@+id/sendRequest"
            android:layout_alignStart="@+id/sendRequest"
            android:layout_marginBottom="28dp"
            android:backgroundTint="#F8ECE0"
            android:text="Edit My Shelter" />

        <Button
            android:id="@+id/sendRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="52dp"
            android:background="@android:drawable/bottom_bar"
            android:backgroundTint="#F6E3CE"
            android:text="Send Admin Request" />

        <ImageView
            android:id="@+id/cs_sg_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            app:srcCompat="@mipmap/cs_social_good"
            android:contentDescription="TODO" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
